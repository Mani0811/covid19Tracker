@model ChartsModel;
@{
    ViewData["Title"] = "India Coronavirus Tracker - AskGif";
}

<script src="https://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/modules/series-label.js"></script>
<script src="https://code.highcharts.com/modules/exporting.js"></script>
<script src="https://code.highcharts.com/modules/export-data.js"></script>
<script src="https://code.highcharts.com/modules/accessibility.js"></script>

<style>
    .highcharts-figure, .highcharts-data-table table {
        min-width: 310px;
        max-width: 800px;
        margin: 1em auto;
    }

    .highcharts-data-table table {
        font-family: Verdana, sans-serif;
        border-collapse: collapse;
        border: 1px solid #EBEBEB;
        margin: 10px auto;
        text-align: center;
        width: 100%;
        max-width: 500px;
    }

    .highcharts-data-table caption {
        padding: 1em 0;
        font-size: 1.2em;
        color: #555;
    }

    .highcharts-data-table th {
        font-weight: 600;
        padding: 0.5em;
    }

    .highcharts-data-table td, .highcharts-data-table th, .highcharts-data-table caption {
        padding: 0.5em;
    }

    .highcharts-data-table thead tr, .highcharts-data-table tr:nth-child(even) {
        background: #f8f8f8;
    }

    .highcharts-data-table tr:hover {
        background: #f1f7ff;
    }

    .highcharts-container {
        width: 100% !important;
    }

    .highcharts-root {
        width: 100% !important;
    }

</style>
<div class="container">
    <br />
    <div class="row justify-content-center">
        <h3>INDIA COVID-19 TRACKER</h3>
    </div>
    <div class="row">
        <div class="col-xs-6 col-md-3">
            <div class="card text-white shadow-lg r-3 l-3 mb-5 bg-info rounded" style="width: 20rem;">
                <div class="card-header">
                    Total Confirmed :
                </div>
                <div class="card-body">
                    <h5 class="card-title">@Model.statewise[0].confirmed ( <i class="fa fa-arrow-circle-up"></i> @Model.statewise[0].delta.confirmed )</h5>
                </div>
            </div>
        </div>
        <div class="col-xs-6 col-md-3">
            <div class="card text-white shadow-lg r-3 l-3 mb-5 bg-primary rounded" style="width: 20rem;">
                <div class="card-header">
                    Total Active :
                </div>
                <div class="card-body">
                    <h5 class="card-title">@Model.statewise[0].active ( <i class="fa fa-arrow-circle-up"></i> @Model.statewise[0].delta.active )</h5>
                </div>
            </div>
        </div>
        <div class="col-xs-6 col-md-3">
            <div class="card text-white shadow-lg r-3 l-3 mb-5 bg-danger rounded" style="width: 20rem;">
                <div class="card-header">
                    Total Death :
                </div>
                <div class="card-body">
                    <h5 class="card-title">@Model.statewise[0].deaths ( <i class="fa fa-arrow-circle-up"></i> @Model.statewise[0].delta.deaths )</h5>
                </div>
            </div>
        </div>
        <div class="col-xs-6 col-md-3">
            <div class="card text-white shadow-lg r-3 l-3 mb-5 bg-success rounded" style="width: 20rem;">
                <div class="card-header">
                    Total Recovered :
                </div>
                <div class="card-body">
                    <h5 class="card-title">@Model.statewise[0].recovered ( <i class="fa fa-arrow-circle-up"></i> @Model.statewise[0].delta.recovered )</h5>
                </div>

            </div>
        </div>
    </div>

    
        <figure class="highcharts-figure">
            <div id="container"></div>
        </figure>
    

        <div class="row">

            <table class="table">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">State</th>
                        <th scope="col">Confirmed</th>
                        <th scope="col">Active</th>
                        <th scope="col">Recovered</th>
                        <th scope="col">Deaths</th>
                    </tr>

                    @{int i = 0;}
                    @foreach (var item in Model.statewise)
                    {
                        if (i != 0)
                        {
                    <tr>
                        <th scope="row">@i</th>
                        <td>@item.state</td>
                        <td>@item.confirmed ( @item.delta.confirmed )</td>
                        <td>@item.active ( @item.delta.active )</td>
                        <td>@item.recovered ( @item.delta.recovered )</td>
                        <td>@item.deaths ( @item.delta.deaths )</td>
                    </tr>
                        }
                        i++;                        
                    }

                </thead>
                <tbody></tbody>
            </table>
</div>
</div>
<script>
    Highcharts.chart('container', {
        xAxis: {
            categories:  @Html.Raw(@Model.categoriesString)
        },
        title: {
            text: 'India Covid-19 Count'
        },
        series: @Html.Raw(@Model.allSeriesString)
    });
</script>