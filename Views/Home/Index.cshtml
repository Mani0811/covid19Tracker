@model ChartsModel;
@{
    ViewData["Title"] = "Covid19 Tracker";
}

<script src="https://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/modules/series-label.js"></script>
<script src="https://code.highcharts.com/modules/exporting.js"></script>
<script src="https://code.highcharts.com/modules/export-data.js"></script>
<script src="https://code.highcharts.com/modules/accessibility.js"></script>

<style>
    .highcharts-figure, .highcharts-data-table table {
        min-width: 310px;
        max-width: 800px;
        margin: 1em auto;
    }

    .highcharts-data-table table {
        font-family: Verdana, sans-serif;
        border-collapse: collapse;
        border: 1px solid #EBEBEB;
        margin: 10px auto;
        text-align: center;
        width: 100%;
        max-width: 500px;
    }

    .highcharts-data-table caption {
        padding: 1em 0;
        font-size: 1.2em;
        color: #555;
    }

    .highcharts-data-table th {
        font-weight: 600;
        padding: 0.5em;
    }

    .highcharts-data-table td, .highcharts-data-table th, .highcharts-data-table caption {
        padding: 0.5em;
    }

    .highcharts-data-table thead tr, .highcharts-data-table tr:nth-child(even) {
        background: #f8f8f8;
    }

    .highcharts-data-table tr:hover {
        background: #f1f7ff;
    }

    .highcharts-container {
        width: 100% !important;
    }

    .highcharts-root {
        width: 100% !important;
    }

</style>
<div class="container">
    <br />
    <div class="row">
        <div class="col-xs-6 col-md-4">
            <div class="card shadow-lg r-3 l-3 mb-5 bg-white rounded" style="width: 20rem;">
                <div class="card-header">
                    Total Confirmed :
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">@Model.statewise[0].confirmed</li>                    
                </ul>
            </div>
        </div>
        <div class="col-xs-6 col-md-4">
            <div class="card shadow-lg r-3 l-3 mb-5 bg-white rounded" style="width: 20rem;">
                <div class="card-header">
                    Total Death :
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">@Model.statewise[0].deaths</li>
                </ul>
            </div>
        </div>
        <div class="col-xs-6 col-md-4">
            <div class="card shadow-lg r-3 l-3 mb-5 bg-white rounded" style="width: 20rem;">
                <div class="card-header">
                    Total Recovered :
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">@Model.statewise[0].recovered</li>
                </ul>
            </div>
        </div>
    </div>

    
        <figure class="highcharts-figure">
            <div id="container"></div>
        </figure>
    

        <div class="row">

            <table class="table">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">State</th>
                        <th scope="col">Confirmed</th>
                        <th scope="col">Active</th>
                        <th scope="col">Deaths</th>
                    </tr>

                    @{int i = 0;}
                    @foreach (var item in Model.statewise)
                    {
                        if (i != 0)
                        {
                            <tr>
                                <th scope="row">@i</th>
                                <td>@item.state</td>
                                <td>@item.confirmed</td>
                                <td>@item.active</td>
                                <td>@item.deaths</td>
                            </tr>
                        }
                        i++;                        
                    }

                </thead>
                <tbody></tbody>
            </table>
</div>
</div>
<script>
    Highcharts.chart('container', {
        xAxis: {
            categories:  @Html.Raw(@Model.categoriesString)
        },
        title: {
            text: 'India Covid-19 Count'
        },
        series: @Html.Raw(@Model.allSeriesString)
    });
</script>